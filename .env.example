# Puerto donde escuchará el servidor Express
PORT=

# Lista de orígenes permitidos para CORS (separados por coma)
# Ejemplo: https://tu-dominio.cl,https://www.tu-dominio.cl
ORIGIN_ALLOWLIST=


# SMTP Nextcloud
SMTP_HOST=
SMTP_PORT=587               # 465 si usas SSL puro
SMTP_SECURE=false           # true si se usa 465
SMTP_USER=
SMTP_PASS=

# Destinatario(s)
MAIL_TO=

# reCAPTCHA v3 
RECAPTCHA_SECRET=
PUBLIC_RECAPTCHA_SITE_KEY=


# Límite de peticiones por IP (protección anti-spam)
RATE_LIMIT_MAX=20
RATE_LIMIT_WINDOW_MS=60000


# Logging simple (puedes usarlo para debug)
LOG_LEVEL=info